# ===============================================
# DOCKER DEPLOYMENT ENVIRONMENT CONFIGURATION
# Misurata Entrepreneurship and Business Incubator Center
# ===============================================

# -----------------------------------------------
# 1. DATABASE CONFIGURATION (Docker)
# -----------------------------------------------
# When using Docker Compose, the host should be 'mysql' (service name)
DATABASE_USER=root
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=citcoder_eitdc
DATABASE_HOST=mysql
DATABASE_PORT=3306

# Alternative: Full DATABASE_URL (comment out individual vars if using this)
# DATABASE_URL=mysql://root:your_secure_password_here@mysql:3306/citcoder_eitdc

# -----------------------------------------------
# 2. APPLICATION SETTINGS
# -----------------------------------------------
NEXT_PUBLIC_APP_NAME=Misurata Entrepreneurship Center
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_generate_with_openssl_rand_base64_32

# -----------------------------------------------
# 3. ADMIN CONFIGURATION
# -----------------------------------------------
INIT_ADMIN_USERNAME=eitdc_admin
INIT_ADMIN_PASSWORD=your_secure_admin_password
ADMIN_API_KEY=your_admin_api_key_generate_random_string

# -----------------------------------------------
# 4. EMAIL SYSTEM - SMTP CONFIGURATION
# -----------------------------------------------
# For Gmail/Google Workspace
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=ebic@cit.edu.ly
SMTP_PASS=your_app_password_here

# Email Addresses
EMAIL_FROM=ebic@cit.edu.ly
SMTP_FROM=ebic@cit.edu.ly
EMAIL_SUPPORT=ebic@cit.edu.ly
EMAIL_ADMIN=ebic@cit.edu.ly
EMAIL_REPLY_TO=ebic@cit.edu.ly
ADMIN_NOTIFICATION_EMAIL=ebic@cit.edu.ly

# Test Email (for development)
TEST_EMAIL=test@example.com

# Rate Limiting
EMAIL_RATE_LIMIT_PER_HOUR=100
EMAIL_RATE_LIMIT_PER_DAY=1000
EMAIL_TOKEN_SECRET=your_email_token_secret

# Retry Configuration
EMAIL_MAX_RETRY_ATTEMPTS=3
EMAIL_RETRY_INITIAL_DELAY=5000
EMAIL_RETRY_MAX_DELAY=300000
EMAIL_TOKEN_TTL=3600

# Development Mode
USE_EMAIL_LOGGING=false

# -----------------------------------------------
# 5. REDIS CONFIGURATION (Docker)
# -----------------------------------------------
# When using Docker Compose, host should be 'redis' (service name)
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=  # Uncomment if Redis requires authentication

# Queue Configuration
EMAIL_QUEUE_CONCURRENCY=5
EMAIL_WORKER_CONCURRENCY=3
EMAIL_QUEUE_REMOVE_ON_COMPLETE=true
EMAIL_QUEUE_REMOVE_ON_FAIL=false

# -----------------------------------------------
# 6. OAUTH PROVIDERS (Optional)
# -----------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------------------------
# 7. SECURITY & MONITORING
# -----------------------------------------------
# Security Headers
ALLOWED_ORIGINS=http://localhost:3000,https://ebic.cit.edu.ly,https://www.cit.edu.ly
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info
SENTRY_DSN=

# -----------------------------------------------
# 8. FEATURE FLAGS
# -----------------------------------------------
ENABLE_EMAIL_QUEUE=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_DISPOSABLE_EMAIL_CHECK=true
ENABLE_EMAIL_ANALYTICS=true

# ===============================================
# DEPLOYMENT NOTES:
# ===============================================
# 1. Copy this file to .env and fill in all required values
# 2. NEVER commit .env file to version control
# 3. Generate secure secrets using: openssl rand -base64 32
# 4. For production, use strong passwords and rotate regularly
# 5. Update ALLOWED_ORIGINS with your production domain
# 6. Configure SMTP with valid credentials for email functionality
# ===============================================

# ENVIRONMENT CONFIGURATION TEMPLATE
# ===============================================

# 1. DATABASE CONFIGURATION
DATABASE_URL=mysql://app_user:app_password@localhost:3306/ebic-db
REDIS_URL=redis://localhost:6379

# 2. APPLICATION SETTINGS
NEXT_PUBLIC_APP_NAME="Misurata Entrepreneurship Center"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true
NEXTAUTH_SECRET=REPLACE_WITH_SECRET

# 3. ADMIN CONFIGURATION
INIT_ADMIN_EMAIL=admin@example.com
INIT_ADMIN_PASSWORD=REPLACE_WITH_SECRET
ADMIN_API_KEY=REPLACE_WITH_SECRET

# 4. EMAIL SYSTEM
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=REPLACE_WITH_SECRET
EMAIL_FROM=user@example.com
EMAIL_TOKEN_SECRET=REPLACE_WITH_SECRET

# 5. S3 STORAGE (MinIO for Dev)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_BUCKET_NAME=website-media
S3_PUBLIC_ACCESS=true

# 11. WhatsApp (ultramsg)
WHATSAPP_API_URL=REPLACE_WITH_INSTANCE_URL
WHATSAPP_API_TOKEN=REPLACE_WITH_TOKEN
WHATSAPP_SENDER_NUMBER=REPLACE_WITH_NUMBER
